// Brick Breaker Game using GLUT and OpenGL
// Paddle enlargement power-ups, 10 lives, dark blue background, bricks with 1 hit each
#include <iostream>
#include <GL/glut.h>
#include <vector>
#include <cstdlib>
#include <ctime>
#include <cmath>
#include <cstdio>
#include <string>
#include <algorithm>
#include <windows.h>
#include <mmsystem.h>
#pragma comment(lib, "winmm.lib")

// Window size
const int width = 800;
const int height = 600;

// Paddle
float paddleX = width / 2 - 50;
float paddleWidth = 100;
const float paddleHeight = 20;
const float paddleY = 50;
const float paddleSpeed = 20;

// Ball struct
struct Ball {
    float x, y;
    float speedX, speedY;
    float radius;
};
std::vector<Ball> balls = {{width / 2, height / 2, 5, 5, 10}};

// Bricks
const int rows = 5;
const int cols = 10;
const int brickWidth = 70;
const int brickHeight = 25;
std::vector<std::vector<int>> bricks;

// Score, lives, and game state
int score = 0;
int lives = 10;
bool gameWon = false;
bool gameLost = false;
bool showWinMessage = false;
bool showLoseMessage = false;

// Fixed colors for brick rows (red, yellow, blue, green, purple)
float brickColors[rows][3] = {
    {1.0f, 0.0f, 0.0f},   // Red
    {1.0f, 1.0f, 0.0f},   // Yellow
    {0.0f, 0.0f, 1.0f},   // Blue
    {0.0f, 1.0f, 0.0f},   // Green
    {0.6f, 0.0f, 0.6f}    // Purple
};

// Draw rectangle
void drawRect(float x, float y, float w, float h, float r, float g, float b) {
    glColor3f(r, g, b);
    glBegin(GL_QUADS);
    glVertex2f(x, y);
    glVertex2f(x + w, y);
    glVertex2f(x + w, y + h);
    glVertex2f(x, y + h);
    glEnd();
}

// Draw text
void drawText(float x, float y, const std::string& text) {
    glRasterPos2f(x, y);
    for (char c : text) {
        glutBitmapCharacter(GLUT_BITMAP_HELVETICA_18, c);
    }
}

// Draw ball
void drawBall(const Ball& ball) {
    glColor3f(1.0f, 0.2f, 0.4f);
    glBegin(GL_TRIANGLE_FAN);
    glVertex2f(ball.x, ball.y);
    for (int i = 0; i <= 100; ++i) {
        float angle = 2 * 3.14159f * i / 100;
        glVertex2f(ball.x + cos(angle) * ball.radius, ball.y + sin(angle) * ball.radius);
    }
    glEnd();
}

// Initialize bricks with hit points 1
void initBricks() {
    bricks = std::vector<std::vector<int>>(rows, std::vector<int>(cols, 1));
}

// Display function
void display() {
    // Dark blue background
    glClearColor(0.0f, 0.0f, 0.3f, 1.0f);
    glClear(GL_COLOR_BUFFER_BIT);

    if (showWinMessage) {
        glColor3f(0, 1, 0);
        drawText(width / 2 - 50, height / 2, "You Win!");
        glutSwapBuffers();
        return;
    }

    if (showLoseMessage) {
        glColor3f(1, 0, 0);
        drawText(width / 2 - 50, height / 2, "You Lost!");
        glutSwapBuffers();
        return;
    }

    // Draw paddle
    drawRect(paddleX, paddleY, paddleWidth, paddleHeight, 0.2f, 0.6f, 1.0f);

    // Draw balls
    for (const Ball& ball : balls) {
        drawBall(ball);
    }

    // Draw bricks with fixed row colors
    for (int i = 0; i < rows; ++i) {
        float r = brickColors[i][0];
        float g = brickColors[i][1];
        float b = brickColors[i][2];
        for (int j = 0; j < cols; ++j) {
            if (bricks[i][j] > 0) {
                float x = 60 + j * (brickWidth + 10);
                float y = height - 50 - i * (brickHeight + 10);
                drawRect(x, y, brickWidth, brickHeight, r, g, b);
            }
        }
    }

    // Draw score and lives
    glColor3f(1, 1, 1);
    drawText(10, height - 20, "Score: " + std::to_string(score) + " | Lives: " + std::to_string(lives));

    glutSwapBuffers();
}

// Ball movement and collision
void update(int value) {
    if (showWinMessage || showLoseMessage) return;

    for (Ball& ball : balls) {
        ball.x += ball.speedX;
        ball.y += ball.speedY;

        // Wall collision
        if (ball.x < ball.radius) {
            ball.x = ball.radius;
            ball.speedX = -ball.speedX;
        }
        if (ball.x > width - ball.radius) {
            ball.x = width - ball.radius;
            ball.speedX = -ball.speedX;
        }
        if (ball.y > height - ball.radius) {
            ball.y = height - ball.radius;
            ball.speedY = -ball.speedY;
        }

        // Paddle collision
        if (ball.y - ball.radius < paddleY + paddleHeight &&
            ball.x > paddleX && ball.x < paddleX + paddleWidth &&
            ball.y > paddleY) {
            ball.speedY = -ball.speedY;
            ball.y = paddleY + paddleHeight + ball.radius; // prevent sticking
        }

        // Brick collision
        for (int i = 0; i < rows; ++i) {
            for (int j = 0; j < cols; ++j) {
                if (bricks[i][j] > 0) {
                    float brickX = 60 + j * (brickWidth + 10);
                    float brickY = height - 50 - i * (brickHeight + 10);

                    if (ball.x + ball.radius > brickX && ball.x - ball.radius < brickX + brickWidth &&
                        ball.y + ball.radius > brickY && ball.y - ball.radius < brickY + brickHeight) {
                        ball.speedY = -ball.speedY;
                        bricks[i][j]--;
                        score += 10;

                        PlaySound("C:\\Windows\\Media\\chimes.wav", NULL, SND_FILENAME | SND_ASYNC);  // Score sound

                        // Power-up chance: 10%
                        if ((rand() % 10) == 0) {
                            paddleWidth += 15;
                            if (paddleWidth > 200) paddleWidth = 200;

                            PlaySound("C:\\Windows\\Media\\Windows Balloon.wav", NULL, SND_FILENAME | SND_ASYNC); // Power-up sound
                        }
                    }
                }
            }
        }
    }

    // Remove balls that fall below screen (lose life)
    auto it = std::remove_if(balls.begin(), balls.end(), [](const Ball& b) {
        return b.y < 0;
    });
    if (it != balls.end()) {
        int lostBalls = std::distance(it, balls.end());
        balls.erase(it, balls.end());
        lives -= lostBalls;
    }

    // If no balls left but lives remain, reset ball and paddle
    if (balls.empty() && lives > 0) {
        balls.push_back({width / 2, height / 2, 5, 5, 10});
        paddleWidth = 100;
    }

    // Check game over
    if (lives <= 0 && !showLoseMessage) {
        gameLost = true;
        showLoseMessage = true;

        PlaySound("C:\\Windows\\Media\\Windows Error.wav", NULL, SND_FILENAME | SND_ASYNC);  // Game over sound
    }

    // Check win condition: all bricks cleared
    bool allBricksCleared = true;
    for (const auto& row : bricks) {
        for (int brick : row) {
            if (brick > 0) {
                allBricksCleared = false;
                break;
            }
        }
        if (!allBricksCleared) break;
    }
    if (allBricksCleared && !showWinMessage) {
        gameWon = true;
        showWinMessage = true;

        PlaySound("C:\\Windows\\Media\\tada.wav", NULL, SND_FILENAME | SND_ASYNC);  // Win sound
    }

    glutPostRedisplay();
    glutTimerFunc(16, update, 0);
}

// Keyboard controls
void keyboard(int key, int, int) {
    switch (key) {
        case GLUT_KEY_LEFT:
            paddleX -= paddleSpeed;
            if (paddleX < 0) paddleX = 0;
            break;
        case GLUT_KEY_RIGHT:
            paddleX += paddleSpeed;
            if (paddleX + paddleWidth > width) paddleX = width - paddleWidth;
            break;
    }
    glutPostRedisplay();
}

// Main function
int main(int argc, char **argv) {
    printf("Starting game...\n");
    srand(time(0));
    initBricks();
    glutInit(&argc, argv);
    glutInitDisplayMode(GLUT_DOUBLE | GLUT_RGB);
    glutInitWindowSize(width, height);
    glutCreateWindow("Colorful Brick Breaker with Lives and Power-ups");
    glMatrixMode(GL_PROJECTION);
    glLoadIdentity();
    gluOrtho2D(0, width, 0, height);

    glutDisplayFunc(display);
    glutSpecialFunc(keyboard);
    glutTimerFunc(0, update, 0);
    glutMainLoop();
    return 0;
}
